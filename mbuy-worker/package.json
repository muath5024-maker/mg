{
  "name": "mbuy-worker",
  "version": "1.0.0",
  "description": "MBUY API Gateway - Cloudflare Worker",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:logs": "wrangler dev --inspect",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "cloudflare",
    "workers",
    "api-gateway",
    "mbuy"
  ],
  "author": "MBUY Team",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/ai": "^1.2.2",
    "@supabase/supabase-js": "^2.87.1",
    "base64-js": "^1.5.1",
    "hono": "^4.6.20",
    "mustache": "^4.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251209.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "uuid": "^13.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.54.0"
  }
}
